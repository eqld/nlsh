{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug nlsh",
      "type": "debugpy",
      "request": "launch",
      "module": "nlsh.main",
      "args": ["Find all text files in the current directory"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug nlsh (interactive)",
      "type": "debugpy",
      "request": "launch",
      "module": "nlsh.main",
      "args": ["-i", "List running processes"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
